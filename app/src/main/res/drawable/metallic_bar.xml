<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Horizontal gradient: left to right metallic shine -->
    <gradient
        android:type="linear"
        android:angle="1"
        android:startColor="@color/beige"
        android:centerColor="@color/beige_dark"
        android:endColor="@color/gray_400" />

    <corners android:radius="2dp" />

    <stroke
        android:width="1dp"
        android:color="#999999" />
</shape>