<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".Activities.FinishParkingScreen">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical"
        android:elevation="15dp"
        android:background="@color/beige"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Λεπτομέρειες Συναλλαγής"
            android:textSize="22sp"
            android:layout_marginTop="32dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/outlined_box_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Πληρωμή στάθμευσης - Honolulu:" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/finish_plate_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAA0000"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bullet"
                    />
                    <TextView
                        android:id="@+id/finish_parking_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01791"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bullet"
                    />
                    <TextView
                        android:id="@+id/finish_pariking_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="'"
                    />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/outlined_box_background"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ποσό πληρωμής:"
                    android:textStyle="bold"
                />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                >
                    <TextView
                        android:id="@+id/finishPaymentPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.85"
                        android:textStyle="bold"
                        android:textSize="20sp"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="3dp"
                        android:text="$"
                        android:textStyle="bold"
                        android:textSize="20sp"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Powered by HulaPark"
        />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/commitPaymentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="24sp"
            android:paddingVertical="16sp"
            android:text="Πληρωμη"
            android:textSize="16sp"
            app:backgroundTint="@color/teal_700" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelPaymentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:paddingHorizontal="24sp"
            android:paddingVertical="16sp"
            android:text="Ακυρωση"
            android:textSize="16sp"
            app:backgroundTint="@color/gray_400" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>