<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="3dp"
        android:text="$"
        android:textColor="@color/teal_700"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_history_amount"
        app:layout_constraintEnd_toStartOf="@+id/card_history_amount" />

    <TextView
        android:id="@+id/card_history_action_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_wallet"
        android:drawablePadding="3dp"
        android:drawableTint="@color/green_leaf"
        android:gravity="center"
        android:textColor="@color/green_leaf"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/card_history_action_text"
        app:layout_constraintTop_toBottomOf="@+id/card_history_action_text" />

    <TextView
        android:id="@+id/card_history_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.00"
        android:textColor="@color/teal_700"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_history_action_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Αύξηση Υπολοίπου"
        android:textColor="@color/green_leaf"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/card_history_timespan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="16:58"
        android:textColor="@color/green_leaf"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/card_history_action_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/card_history_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="28/2/2024"
        android:textColor="@color/green_leaf"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/card_history_action_text"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>