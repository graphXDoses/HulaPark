<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    tools:context=".Activities.HomeScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <fragment
        android:id="@+id/activeFrag"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/BottomNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:navGraph="@navigation/frag_nav" />

    <com.parkingapp.hulapark.Views.BubbleView
        android:id="@+id/Bubble"
        android:layout_width="100dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toTopOf="@+id/BottomNavBar"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints"
        app:color="@color/mild_purple"
    />

    <com.parkingapp.hulapark.Views.BottomNavMenuHolderView
        app:exampleColor="@color/mild_purple"
        android:id="@+id/BottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemTextColor="@drawable/bottom_nav_active_frag_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"
        app:itemPaddingBottom="5dp"
    />

