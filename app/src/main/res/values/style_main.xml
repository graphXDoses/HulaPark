<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.Theme.HulaPark.MyView" parent="">
        <item name="android:background">@color/beige</item>
        <item name="menuColor">@color/mild_purple</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/yellow</item>
        <item name="android:width">@dimen/_40sdp</item>
        <item name="android:height">@dimen/_40sdp</item>
    </style>

    <style name="AuthButton" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">15dp</item>
        <item name="iconTint">@color/beige</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/yellow</item>
    </style>
    <style name="AuthButton.SignIn" parent="AuthButton">
        <item name="icon">@drawable/ic_singin</item>
        <item name="android:text">@string/singIn</item>
    </style>
    <style name="AuthButton.SignUp" parent="AuthButton">
        <item name="icon">@drawable/ic_singup</item>
        <item name="android:text">@string/singUp</item>
    </style>

    <style name="AuthButton.Logout" parent="AuthButton.SignIn">
        <item name="icon">@drawable/ic_singin</item>
        <item name="android:text">Έξοδος</item>
        <item name="backgroundTint">@color/teal_700</item>
    </style>

    <style name="DialogBoxOKButton" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">8dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:text">OK</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/beige</item>
        <item name="android:paddingVertical" tools:targetApi="o">15dp</item>
    </style>
</resources>